<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    <DataTemplate x:Key="ControlATemplate">
        <Border BorderBrush="Black" Background="LightGray" Padding="10" CornerRadius="3">
            <StackPanel>
                <TextBlock Text="{Binding Timestamp}"/>
                <TextBlock Text="{Binding Name}"/>
            </StackPanel>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="ControlBTemplate">
        <Border BorderBrush="Black" Background="LightGreen" Padding="10" CornerRadius="3">
            <StackPanel>
                <TextBlock Text="{Binding Timestamp}"/>
                <TextBlock Text="{Binding Name}"/>
            </StackPanel>
        </Border>
    </DataTemplate>

    <DataTemplate x:Key="ControlCTemplate">
        <Border BorderBrush="Black" Background="LightBlue" Padding="10" CornerRadius="3">
            <StackPanel>
                <TextBlock Text="{Binding Timestamp}"/>
                <TextBlock Text="{Binding Name}"/>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>